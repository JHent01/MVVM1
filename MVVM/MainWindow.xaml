<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
      
        mc:Ignorable="d"
        
        d:DataContext="{local:MainViewModel}"
        
       Icon="pack://application:,,,/Icon/Icon1.ico"  Title ="Анкета" Height="500" Width="850">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/StyleButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
                <local:VisibilityConvert x:Key="VisibilityConvert"/>
                <local:EnableButtonConvert x:Key="EnableButtonConvert"/>

        </ResourceDictionary>
  
    </Window.Resources>
    
    <Grid Name="All"  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="124*"/>
            <ColumnDefinition Width="221*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>



        </Grid.RowDefinitions>

        <Label  Content="Імена" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Text="{Binding Pattern, UpdateSourceTrigger=PropertyChanged}" Width="140" Height="25" Margin="0,0,0,0" FontSize="15"    HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="Black"    Background ="AliceBlue" />

        <ListBox  Grid.Column="0" Grid.Row="3" ItemsSource="{Binding SearchList}"  SelectedItem="{Binding SelectedPerson}"     Margin="0,25,0,25" >
            <ListBox.ItemTemplate>
                
                <DataTemplate>
                    
                    <TextBlock >
                         
                        <Run Text="{Binding PersonName,UpdateSourceTrigger=PropertyChanged}" FontSize="18"/> 
                        <Button Content="X" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0,0,0"   Command="{Binding DeleteCommand}"    />  <LineBreak/>  <!-- Style="{StaticResource ButtonStyle}"  IsEnabled="{Binding EnableButtonClear,UpdateSourceTrigger=PropertyChanged ,  Converter={StaticResource EnableButtonConvert}}"-->
                        <Run Text="Вік: " FontSize="10"/>
                        <Run Text="{Binding Age}" FontSize="10"/>
                        <Run Text="Посада: " FontSize="10"/>
                        <Run Text="{Binding Post,  UpdateSourceTrigger=PropertyChanged}"  FontSize="10"/>
                      
                    </TextBlock>
                   
                    <!--CommandParameter="{Binding}"     Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}-->
                </DataTemplate>
               
            </ListBox.ItemTemplate>
            
        </ListBox>
        <!--<ListBox  Grid.Column="0" Grid.Row="3" ItemsSource="{Binding SearchList}"  SelectedItem="{Binding SelectedPerson}"   Visibility="{Binding VisibilityList, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConvert}}"   Margin="0,25,0,25" >
            <ListBox.ItemTemplate>

                <DataTemplate>

                    <TextBlock >
                  
                 <Run Text="{Binding PersonName,UpdateSourceTrigger=PropertyChanged}" FontSize="18"/> <Button Content="X" Width="20" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0,0,0"   Command="{Binding DeleteCommand}"    />  <LineBreak/>  --><!-- Style="{StaticResource ButtonStyle}"  IsEnabled="{Binding EnableButtonClear,UpdateSourceTrigger=PropertyChanged ,  Converter={StaticResource EnableButtonConvert}}"--><!--
                 <Run Text="Вік: " FontSize="10"/>
                 <Run Text="{Binding Age}" FontSize="10"/>
                 <Run Text="Посада: " FontSize="10"/>
                 <Run Text="{Binding Post,  UpdateSourceTrigger=PropertyChanged}"  FontSize="10"/>

                    </TextBlock>

                    --><!--CommandParameter="{Binding}"     Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}--><!--
                </DataTemplate>

            </ListBox.ItemTemplate>

        </ListBox>-->
        <Button Grid.Row="1" Name="Add" Content="Додати"  Style="{StaticResource ButtonStyle}" Command="{Binding AddCommand}"  />

        <Button Grid.Row="2" Name="Clear" Content="Очистити все"  Style="{StaticResource ButtonStyle}" Command="{Binding ClearAllCommand}" IsEnabled="{Binding EnableButtonClear,UpdateSourceTrigger=PropertyChanged ,  Converter={StaticResource EnableButtonConvert}}" />
        <!--<Button Grid.Row="3" Name="Delete" Content="Видалити"  Style="{StaticResource ButtonStyle}" Command="{Binding DeleteCommand}" IsEnabled="{Binding EnableButtonClear,UpdateSourceTrigger=PropertyChanged ,  Converter={StaticResource EnableButtonConvert}}" />-->

        <Grid Name="Info" Grid.Column="1" Grid.Row="0" Grid.RowSpan="6" Visibility="{Binding VisibilityConverts, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource VisibilityConvert}}"  Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />

                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>



            </Grid.RowDefinitions>




            <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Name="Img" Source="{Binding PhotoProf, UpdateSourceTrigger=PropertyChanged}"  Width="200" Height="200"  VerticalAlignment="Top" Margin="0,5,0,0"/>

            <Label Grid.Column="2" Grid.Row="2"  Content="Ім'я:" FontSize="15" FontWeight="Bold"  Margin="0,5,10,10" VerticalAlignment="Top" />
            <Label Grid.Column="2" Grid.Row="3"  Content="Вік:" FontSize="15" FontWeight="Bold" Margin="0,5,10,10" VerticalAlignment="Top" />
            <Label Grid.Column="2" Grid.Row="4"  Content="Посада:" FontSize="15" FontWeight="Bold" Margin="0,5,10,10"  VerticalAlignment="Top" />
            <Label Grid.Column="2" Grid.Row="5"  Content="Відпустка:" FontSize="15" FontWeight="Bold" Margin="0,0,10,10"  VerticalAlignment="Top" />


            <TextBox  Grid.Column="3" Grid.Row="2" Name="NameBox" Text="{Binding Names }"  Width="100" Height="30" Margin="0,0,10,10" FontSize="15" />
            <TextBox  Grid.Column="3" Grid.Row="3" Name="AgeBox" Text="{Binding Age}" Width="100" Height="30" Margin="0,0,10,10"  FontSize="15" />


            <ComboBox Grid.Column="3" Grid.Row="4" Name="PostBox" Width="auto" Margin="0,0,10,10" Height="30" ItemsSource="{Binding Source={local:ConvertEnum {x:Type local:EnumPost}}, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding Post}" IsReadOnly="True" />
            <ComboBox Grid.Column="3" Grid.Row="5" Name="WikendBox"  Width="auto" MaxWidth="150" Margin="0,0,10,10" ItemsSource="{Binding Source={local:ConvertEnum {x:Type local:EnumWeekend}}, UpdateSourceTrigger=PropertyChanged}"   SelectedItem="{Binding Weekend}" Height="30" IsReadOnly="True" VerticalAlignment="Top"/>

            <Button Grid.Column="0"  Grid.Row="2" Name="EditPhoto" Content="Змінити Фото" Width=" 100 " Height=" 30" Margin="5"   FontWeight="Medium"   Command="{Binding UpdetePhotoProf}"  />
            <Grid Grid.Row="0" Grid.Column="4" Grid.RowSpan="7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="120"/>
                    <ColumnDefinition Width="auto"/>
                    
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0"  Name="Cansel" Content="Відміна змін" Width="100" Height="30" Margin="10,20" FontWeight="Medium" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Command="{Binding CanselCommand}" />
            <Button Grid.Column="1"  Grid.Row="0" Name="SaveEdit" Content="Зберегти зміни" Width="100" Height="30"  Margin="10,20"  FontWeight="Medium" VerticalAlignment="Bottom" HorizontalAlignment="Right"   Command="{Binding SaveCommand}" />
            </Grid>
        </Grid>
        <Button  Grid.Column="0" Grid.Row="4" Name="Save" Content="Зберегти Файл" Width="100" Height="30"  Background="Green" FontWeight="Medium" VerticalAlignment="Top" Command="{Binding SaveJsonCommand}"   IsEnabled="{Binding EnableButtonSaveJson,UpdateSourceTrigger=PropertyChanged ,  Converter={StaticResource EnableButtonConvert}}"/>
        <Button Grid.Column="0" Grid.Row="4"  Name="OpenTxT" Content="Відкрити файл" Width="100" Height="30"  Background="SkyBlue"  FontWeight="Medium" VerticalAlignment="Top"  Command="{Binding OpenJsonCommand}" Margin="5,40,5,0" Grid.RowSpan="2"/>
      
    </Grid>
</Window>

<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="Анкета" Height="500" Width="800">
    <Window.Resources>
        <Style x:Key="MyCustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="90"/> <!--Width="90" Height="20"    FontWeight="Medium" VerticalAlignment="Top" HorizontalAlignment="Center" />-->
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>


            <Style.Triggers>
               
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="red"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>

            

        </Style>
    </Window.Resources>
    <Grid Name="All" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>



        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0"  Content="Імена" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Top"/>

        <ListBox  Grid.Column="0" Grid.Row="3"  Name="NameL"   DisplayMemberPath="Name"  Margin="0,25  " >
            <!--SelectionChanged="NameL_SelectionChanged"-->

        </ListBox>

        <Button  Grid.Column="0" Grid.Row="1" Name="Add" Content="Додати"  Style="{StaticResource MyCustomButtonStyle}" />
        <!--Click="Add_Click"-->
        <Button  Grid.Column="0" Grid.Row="2" Name="Clear" Content="Чистити"  Style="{StaticResource MyCustomButtonStyle}" />
        <Button  Grid.Column="0" Grid.Row="3" Name="Delete" Content="Видалити"  Style="{StaticResource MyCustomButtonStyle}" />

        <Grid Name="Info" Grid.Column="1" Grid.Row="0" Grid.RowSpan="6" Visibility ="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115" />
                <ColumnDefinition Width="115"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
               
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>




            <Image Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="3" Name="Img"   Width="200" Height="200"  VerticalAlignment="Top" Margin="0,5,0,0"/>

            <Label Grid.Column="2" Grid.Row="2"  Content="Ім'я:" FontSize="15" FontWeight="Bold"  Margin="0,5,10,10" VerticalAlignment="Top" />
            <Label Grid.Column="2" Grid.Row="3"  Content="Вік:" FontSize="15" FontWeight="Bold" Margin="0,5,10,10" VerticalAlignment="Top" />
            <Label Grid.Column="2" Grid.Row="4"  Content="Посада:" FontSize="15" FontWeight="Bold" Margin="0,5,10,10"  VerticalAlignment="Top" />
            <Label Grid.Column="2" Grid.Row="5"  Content="Відпустка:" FontSize="15" FontWeight="Bold" Margin="0,0,10,10"  VerticalAlignment="Top" />


            <TextBox  Grid.Column="3" Grid.Row="2" Name="NameBox"  Width="100" Height="30" Margin="0,0,10,10" FontSize="15" />

            <TextBox  Grid.Column="3" Grid.Row="3" Name="AgeBox" Width="100" Height="30" Margin="0,0,10,10"  FontSize="15" /> 
            <!--ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:PostEnum}}}"
               ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:EnumWikend}}}" -->


            <ComboBox Grid.Column="3" Grid.Row="4" Name="PostBox" Width="auto" Margin="0,0,10,10" Height="30" IsReadOnly="True"/>
            <ComboBox Grid.Column="3" Grid.Row="5" Name="WikendBox"  Width="auto" MaxWidth="150" Margin="0,0,10,10"  Height="30" IsReadOnly="True" VerticalAlignment="Top"/>
      
            <Button Grid.Column="0"  Grid.Row="4" Name="EditPhoto" Content="Змінити Фото" Width=" 100 " Height=" 30" Margin="5"   FontWeight="Medium"     />


            <Button Grid.Column="5"  Grid.Row="6" Name="SaveEdit" Content="Зберегти зміни" Width="100" Height="30"  Margin="10" VerticalAlignment="Top"  FontWeight="Medium"   HorizontalAlignment="Center"/>
            <Button Grid.Column="4"  Grid.Row="6" Name="Cansel" Content="Відміна змін" Width="100" Height="30" Margin="10" VerticalAlignment="Top"   FontWeight="Medium"   HorizontalAlignment="Center"/>
        </Grid>
        

        <Button  Grid.Column="0" Grid.Row="4" Name="Save" Content="Зберегти Файл" Width="100" Height="30"  Background="Green"  VerticalAlignment="Top" />
             <Button Grid.Column="0" Grid.Row="5"  Name="OpenTxT" Content="Відкрити файл" Width="100" Height="30"  Background="SkyBlue"  FontWeight="Medium" VerticalAlignment="Top" />
        <!--Click="Save_Click" Click="OpenJson_Click"    Click="SaveEdit_Click"   Click="CensleEdit_Click"    Click="EditPhoto_Click"-->



    </Grid>
</Window>
